#pragma once
#include <iostream>
#include <fstream>
#include <string>


struct Node {
	std::string surname;
	int tabelNum;
	std::string departmentName;
	double salary;

	Node* next;
	Node* prev;
};

class List {
private:
	Node* head;
	Node* tail;
	int size;

public:
	List();
	~List();

	void insert(std::string surname, int tabelNum, std::string departmentName, double salary);
	void removeSurname(std::string surname);
	void print();
	void printReverse();
	void sortSalary();
	void sortSurname();
	void readFromFile(std::string fileName);
	void writeToFile(std::string fileName);
	void allPayments(std::string departmentName);
	void averagePayment(std::string departmentName);
	void statement(std::string departmentName);
	void searchBySurname(std::string surname);
	bool containsSurname(const std::string& surname);
	bool containsDepartment(const std::string& departmentName);
};
